<section class="content-area album-area pjax-area">
  <div class="container grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-[8px]">
    <% if (site.data.album) { %>
    <% for (var a in site.data.album) { %>
    <a href="<%- site.data.album[a].url %>">
      <div class="gpro-tile lazy-bg" data-src="<%- site.data.album[a].cover %>">
        <div class="gpro-tile-descr"><%= a %></div>
      </div>
    </a>
    <% } %><% } %>
  </div>
</section>
<script>
  $(function() {
    $("div.lazy-bg").lazyload();
  });
</script>
<section class="pjax-area">
  <style>
    body {
      background-color: #fff;
    }

    .container {
      padding-top: 60px;
    }

    .gpro-tile {
      aspect-ratio: 4 / 3;
      background-position: center;
      background-size: cover;
      border-radius: 5px;
      transition: all .15s ease-in-out;
    }

    .gpro-tile:hover {
      box-shadow: 0 2px 8px rgb(0 0 0 / 12%);
      transform: scale(1.02);
      transition: all .15s ease-in-out;
    }

    .gpro-tile-descr {
      position: relative;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(#00000000 50%, #00000055 100%);
      color: #fff;
      font-size: 14px;
      border-radius: 5px;
      opacity: 0;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      text-overflow: clip;
      transition: all .15s ease-in-out;
      padding-bottom: .85em;
    }

    .gpro-tile-descr:hover {
      opacity: 1;
      transition: all .15s ease-in-out;
    }
  </style>
</section>