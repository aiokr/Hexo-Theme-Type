<section class="pjax-area">
  <div class="content-area album-area">
    <% if (theme.photography_page.slogan == true) { %>
    <div class="container gpro-slogan title">
      <%- theme.photography_page.slogan_descr %>
    </div>
    <% } %>
    <div class="container gpro-container grid grid-cols-1 xs:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% if (site.data.album) { %>
      <% for (var a in site.data.album) { %>
      <a href="<%- site.data.album[a].url %>">
        <div class="gpro-tile lazy" data-src="<%- site.data.album[a].cover %>">
          <div class="gpro-tile-descr"><%= a %></div>
        </div>
      </a>
      <% } %><% } %>
    </div>
  </div>
  <script>
    $(function() {
      $("div.lazy").lazyload();
    });
  </script>
  <style>
    body {
      background-color: #fff;
    }

    .album-area {
      margin-top: 120px;
      padding-left: 16px;
      padding-right: 16px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .gpro-slogan {
      text-align: center;
      font-size: 36px;
      font-weight: 700;
      color: #3D4350;
    }

    .gpro-container {
      margin-top: 120px;
      gap: 8px;
    }

    .gpro-tile {
      aspect-ratio: 3 / 2;
      background-position: center;
      background-size: cover;
      border-radius: 5px;
      transition: all .15s ease-in-out;
      min-height: 211px;
    }

    .gpro-tile:hover {
      box-shadow: 0 2px 8px rgb(0 0 0 / 12%);
      transform: scale(1.02);
      transition: all .15s ease-in-out;
    }

    .gpro-tile-descr {
      position: relative;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(#00000000 50%, #00000055 100%);
      color: #fff;
      font-size: 14px;
      border-radius: 5px;
      opacity: 0;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      text-overflow: clip;
      transition: all .15s ease-in-out;
      padding-bottom: .85em;
    }

    .gpro-tile-descr:hover {
      opacity: 1;
      transition: all .15s ease-in-out;
    }

    @media (max-width: 768px) {
      .gpro-slogan {
        font-size: 28px;
      }

      .content-area {
        margin-top: 80px;
      }

      .gpro-container {
        margin-top: 60px;
      }
    }
  </style>
</section>